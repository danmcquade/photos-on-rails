<%= form_for [@user, @photo], html: { multipart: true } do |f| %>
  <div class="field">
    <%= f.label "Photo Title" %><br>
    <%= f.text_field :title, size: "100" %>
  </div>
  <div class="field">
    <% if f.object.url? %>
      <%= f.label "Replace Image" %><br>
    <% else %>
      <%= f.label "Upload Image" %><br>
    <% end %>
    <%= f.file_field :url %>
    <% if f.object.url? %>
      <%= image_tag f.object.url.url, :class => "full-img" %>
    <% end %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
